<h2 class="mytitlelogin"> Chào mừng bạn đến với Micromart! Mời bạn đăng kí tài khoản</h2>
<!--Sign up Form-->
<div id="idSignUpView" class="modalSignUp">
    <div class="modal-contentSignUp">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id02').style.display='none'" class="closeSignUp"
                title="Close Modal">&times;</span>
        </div>
        <form action="/action_page.php">
            <div class="containerSignUp">
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>
                <label for="email"><b>Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" required>

                <label for="psw-repeat"><b>Repeat Password</b></label>
                <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px">
                    Remember me
                </label>

                <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms &
                        Privacy</a>.</p>

                <div class="clearfixSignUp">
                    <button type="button" onclick="document.getElementById('id02').style.display='none'"
                        class="cancelbtnSignUp buttonSignUp">Cancel</button>
                    <button type="submit" class="signupbtn buttonSignUp" id="submitSignUp">Sign Up</button>
                </div>
            </div>
        </form>
    </div>

</div>

<script>
    //javascrip cua signup
        // Get the modal
        $(document).ready(function () {
                // User send username and password
            $("#submitSignUp").click(function () {
                window.open("/");
            });
        });
</script>