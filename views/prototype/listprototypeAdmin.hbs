<div class="mytitle">
    <h2>Sản phẩm {{namelist}}</h2>
    <hr>
</div>
{{#if this.empty}}
    <div class="card-body">
    <p class="card-text">
      Chưa có dữ liệu.
    </p>
  </div>
{{else}}
    <div class="mygroupcard row">
    {{#each this.products}}
    <div class="card zoom img-card mt-2 ml-5 mr-1 col-sm-3 h-100" onclick="detailItem()">
        <img src="Images/{{Img}}" class="card-img-top" alt="..." height="130">
        <div class="card-body mt-3">
            <h5 class="card-title mb-4">{{ProName}}</h5>
            <p class="card-text text-center"><i class="fa fa-gavel" aria-hidden="true"></i> {{Price}}</p>
            <p class="card-text timer text-center"></p>
            <a class="btn btn-primary" href="/user/edit/{{ProID}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
            </a>
        </div>
    </div>
    {{/each}}
</div>
<div class="row">
      <div class="col-sm-12">
        <nav>
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="?page={{prev_value}}">
               <i class="fa fa-backward" aria-hidden="true"></i> Previous
               </a>
            </li>

            {{#each this.page_numbers}}

            {{#if isCurrentPage}}
              <li class="page-item active" aria-current="page">
              <a class="page-link" href="javascript:;">{{value}}<span class="sr-only">(current)</span></a>
            </li>
            {{else}}
              <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
            {{/if}}

            {{/each}}

            <li class="page-item">
              <a class="page-link" href="?page={{next_value}}">
               <i class="fa fa-forward" aria-hidden="true"></i> Next</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
{{/if}}