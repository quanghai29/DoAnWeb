<div class="card shadow mb-4">
    <h4 class="card-header">
        New Product
    </h4>
    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="txtProName">Product Name</label>
                <input type="text" class="form-control" id="txtProName" name="ProName" placeholder="Enter product name" autofocus>
            </div>
            <div class="form-group">
                <label for="txtItem">ID item</label>
                <input type="text" class="form-control" id="txtItem" name="Item" placeholder="Enter Id Item">
            </div>
            <div class="form-group">
                <label for="txtImg">Image</label>
                <input type="text" class="form-control" id="txtImg" name="Img" placeholder="Source Image">
            </div>
            <div class="form-group">
                <label for="txtPrice">Price</label>
                <input type="text" class="form-control" id="txtPrice" name="Price" placeholder="Enter price">
            </div>
            {{!-- <a class="btn btn-primary" href="/admin/categories" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List
            </a> --}}
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>
    </div>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>