<div class="card shadow mb-4">
  <h4 class="card-header">
    Category
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtItemID">#</label>
        <input type="text" class="form-control" id="txtItemID" name="ItemID" readonly value="{{this.category.ItemID}}">
      </div>
      <div class="form-group">
        <label for="txtItemName">Category</label>
        <input type="text" class="form-control" id="txtItemName" name="ItemName" autofocus value="{{this.category.ItemName}}">
      </div>
      <div class="form-group">
        <label for="txtListID">List (1: dien thoai ; 2: may tinh)</label>
        <input type="text" class="form-control" id="txtListID" name="List" value="{{this.category.List}}">
      </div>
      <a class="btn btn-outline-primary" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-outline-success" formaction="/admin/categories/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
      <button type="submit" class="btn btn-outline-danger" formaction="/admin/categories/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete
      </button>
    </form>
  </div>
  <div class="card-footer text-muted">
    Footer
  </div>
</div>