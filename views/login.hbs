<h2 class="mytitlelogin"> Chào mừng bạn đến với Micromart!  Mời đăng nhập</h2>
<!--Login Form-->
<div id="idLoginView" class="modalLogin">
    <div class="modalContentLogin">
        <form action="" method="">
            <!-- Button "x"-->
            <div class="imgcontainer">
                <span onclick="document.getElementById('idLoginView').style.display='none'" class="closeLogin"
                    title="Close Modal">&times;</span>
            </div>

            <div class="containerLogin">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="uname" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" required>

                <button class="buttonLogin" id="submitlogin" type="button">Login</button>
                <label>
                    <input type="checkbox" checked="checked" name="remember"> Remember me
                </label>
            </div>

            <div class="containerLogin" style="background-color:#f1f1f1">
                <button type="button" onclick="document.getElementById('idLoginView').style.display='none'"
                    class="cancelbtn buttonLogin">Cancel</button>
                <span class="psw">Forgot <a href="#">password?</a></span>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
            // User send username and password
            $("#submitlogin").click(function () {
                window.open("/");
            });
    });
</script>