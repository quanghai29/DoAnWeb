<!-- Hình SLider -->
<div class="row">
  <div class="col-sm-3 mt-4">
    <!--Phần list menu của trang home-->
    <div class="card shadow">
      <div class="list-group list-group-flush">
        <ul class="menu">
          <li class="menu-item">
            <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-mobile fa-lg"
                aria-hidden="true"></i> Điện thoại di động</a>
            <ul class="submenu">
              {{#each this.categoryMobile}}
                <li><a href="/user/{{ItemID}}/products" rel="stylesheet">{{ItemName}}</a></li>
              {{/each}}
            </ul>
          </li>
          <li class="menu-item">
            <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-laptop fa-lg"
                aria-hidden="true"></i> Máy tính xách tay</a>
            <ul class="submenu">
              {{#each this.categoryLaptop}}
                <li><a href="/user/{{ItemID}}/products" rel="stylesheet">{{ItemName}}</a></li>
              {{/each}}
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-9 mt-4">
    <!--Phần Slider những thứ nổi bật của trang web-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/Images/SlideShow/ssnote10.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/redmi-note8.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/dell.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/macbook.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/asus.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Phần trưng bày sản phẩm nổi bật -->
<div class="container-fluid">
  <!--Top 5 sản phẩm gần kết thúc-->
  <div class="mytitle">
    <h2>Top 5 sản phẩm gần đây nhất</h2>
    <hr>
  </div>
  <div class="mygroupcard">
    {{#each top5day}}
    <div class="card zoom img-card mt-2 ml-5 mr-1" onclick="detailItem()">
      <img src="Images/{{image}}" class="card-img-top" alt="..." height="130">
      <div class="card-body mt-3">
        <h5 class="card-title mb-4">{{name}}</h5>
        <p class="card-text text-center"><i class="fa fa-gavel" aria-hidden="true"></i> {{pricecurrent}}
          (ID:{{IDcustomer}})</p>
        <p class="card-text timer text-center"></p>
      </div>
    </div>
    {{/each}}
  </div>


  <!--Top 5 sản phẩm có nhiều lượt ra giá nhất-->
  <div class="mytitle">
    <h2>Top 5 sản phẩm có nhiều lượt ra giá nhất</h2>
    <hr>
  </div>
  <div class="mygroupcard">
    {{#each top5offer}}
    <div class="card zoom img-card mt-2 ml-5 mr-1" onclick="detailItem()">
      <img src="Images/{{image}}" class="card-img-top" alt="..." height="130">
      <div class="card-body mt-3">
        <h5 class="card-title mb-4">{{name}}</h5>
        <p class="card-text text-center"><i class="fa fa-gavel" aria-hidden="true"></i> {{pricecurrent}}
          (ID:{{IDcustomer}})</p>
        <p class="card-text timer text-center"></p>
      </div>
    </div>
    {{/each}}
  </div>

  <!--TOp 5 sản phẩm có giá cao nhất-->
  <div class="mytitle">
    <h2>Top 5 sản phẩm có giá cao nhất</h2>
    <hr>
  </div>
  <div class="mygroupcard">
    {{#each top5value}}
    <div class="card zoom img-card mt-2 ml-5 mr-1" onclick="detailItem()">
      <img src="Images/{{image}}" class="card-img-top" alt="..." height="130">
      <div class="card-body mt-3">
        <h5 class="card-title mb-4">{{name}}</h5>
        <p class="card-text text-center"><i class="fa fa-gavel" aria-hidden="true"></i> {{pricecurrent}}
          (ID:{{IDcustomer}})</p>
        <p class="card-text timer text-center"></p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<p class="show">
</p>
