        <div class="list-group list-group-flush">
          <ul class="menu">
            <li class="menu-item">
              <a href="#" class="list-group-item list-group-item-action"><i class="fa fa-mobile fa-lg"
                  aria-hidden="true"></i> Điện thoại di động</a>
              <ul class="submenu">
                <li><a href="/samsung" rel="stylesheet">Samsung</a></li>
                <li><a href="/nokia" rel="stylesheet">Nokia</a></li>
                <li><a href="/xiaomi" rel="stylesheet">Xiaomi</a></li>
