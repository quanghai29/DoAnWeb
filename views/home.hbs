<!-- Hình SLider -->
<div class="row">
  <div class="col-sm-3 mt-4">
    <!--Phần list menu của trang home-->

    <!--Đang chỉnh sửa--->
    <div class="card shadow">
            <h4 class="card-header">
              Categories
            </h4>
            <div class="list-group list-group-flush">
              {{#each lcCategories}}
              <a href="/categories/{{ItemID}}/products?page=1"
                class="list-group-item list-group-item-action {{#if isActive}}active{{/if}}">
                {{ItemName}}
                {{!-- {{#if num_of_products}}
                <span class="badge badge-danger float-right">{{num_of_products}}</span>
                {{/if}} --}}
              </a>
              {{/each}}
            </div>
          </div>
  </div>
  <div class="col-sm-9 mt-4">
    <!--Phần Slider những thứ nổi bật của trang web-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/Images/SlideShow/ssnote10.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/redmi-note8.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/dell.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/macbook.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <div class="carousel-item">
          <img src="/Images/SlideShow/asus.jpg" class="d-block w-100 sizetImage" alt="...">
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>

